@model JobApplication

<h2>Edit Resume</h2>

<form asp-action="EditResume" method="post">
    <input type="hidden" asp-for="JobApplicationId" />
    <div class="form-group">
        <label asp-for="Resume"></label>
        <textarea asp-for="Resume" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Resume" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="JobApplicationIndex" class="btn btn-secondary">Cancel</a>
</form>
