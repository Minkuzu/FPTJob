@model EditUserViewModel
@{
    ViewBag.Title = "Detail User";
}
<h1>@Model.FirstName @Model.LastName Detailed Information</h1>
<div>Profile Picture:</div>
<img src="@Model.ProfilePicture" alt="Profile Picture" width="200" height="200">
<div class="card mb-3">
    <div class="card-header">
        <h5 class="card-title">Id: @Model.Id</h5>
    </div>
    <div class="card-body">
        <h5 class="card-title">Username: @Model.UserName</h5>
    </div>
    <div class="card-body">
        <h5 class="card-title">First Name: @Model.FirstName</h5>
    </div>
    <div class="card-body">
        <h5 class="card-title">Last Name: @Model.LastName</h5>
    </div>
    <div class="card-body">
        <h5 class="card-title">Address: @Model.Address</h5>
    </div>
    <div class="card-body">
        <h5 class="card-title">Phone: @Model.Phone</h5>
    </div>
    <div class="card-header">
        <h3 class="card-title">User Roles:</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
    </div>
<div class="form-group row">
    <div class="col-sm-10">
        <a asp-action="Index" class="btn btn-primary">Back</a>
    </div>
</div>